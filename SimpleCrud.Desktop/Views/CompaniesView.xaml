<UserControl x:Class="SimpleCrud.Desktop.Views.CompaniesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleCrud.Desktop.Views"
             xmlns:controls="clr-namespace:SimpleCrud.Controls;assembly=SimpleCrud.Controls"
             xmlns:viewModels="clr-namespace:SimpleCrud.Desktop.ViewModels"
             xmlns:views="clr-namespace:SimpleCrud.Controls.Views;assembly=SimpleCrud.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:CompaniesViewModel/>
    </UserControl.DataContext>
    <StackPanel Orientation="Vertical">
        <Button Command="{Binding AsyncCommand, Mode=OneTime}"
                CommandParameter="{Binding ResultParam, Mode=OneTime}"> TEST </Button>
        <views:ProgressView DataContext="{Binding CurrentTask, Mode=OneWay}"/>
    </StackPanel>
</UserControl>
